# -*- mode: sh -*-
# /etc/skel/.bash_profile

# This file is sourced by bash for login shells.  The following line
# runs your .bashrc and is recommended by the bash info pages.
if [[ -f ~/.bashrc ]] ; then
	. ~/.bashrc
fi

LIVE_EBUILDS="media-plugins/deadbeef-fb
              net-p2p/retroshare
              x11-misc/compton
              x11-themes/qtstyleplugins
              media-sound/deadbeef"

function gentoo-sync () {
	/usr/bin/emerge --sync
	if [[ -e /var/cache/eix/portage.eix ]]; then
		/bin/cp -a /var/cache/eix/portage.eix /var/cache/eix/previous.eix;
	fi
	/usr/bin/eix-update
	if [[ -e /var/cache/eix/previous.eix ]]; then
		/usr/bin/eix-diff
	fi
}

function gentoo-update () {
	/usr/bin/emerge --ask --verbose --update --deep --newuse --with-bdeps=y "$@" @world
}

function gentoo-update-full () {
    gentoo-update --changed-deps=y --exclude "$LIVE_EBUILDS $@"
}

# .bash_profile ends here
